include ./components/common/head.pug
include ./components/common/breadcrumbs.pug
include ./components/common/title.pug
include ./components/common/cardH.pug

doctype html
html(lang="zh-Hant-TW")
  +head("login")
  body
    include ./components/common/header.pug
    main(class="mt-[52px] lg:mt-[72px]")
      // 主圖 
      section(class="relative bg-white")
        div(class="relative max-w-screen-xl mx-auto overflow-hidden xl:rounded-lg before:absolute before:inset-0 before:w-full before:h-full before:bg-gradient-to-r before:from-black/50 before:via-black/0 before:to-black/50")
          img(class="w-full h-[150px] xl:h-[250px] object-cover" src="./images/login/login-bg.png", alt="")
          h1(class="absolute text-2xl font-bold text-white top-14 xl:top-16 left-5 xl:left-8 xl:text-4xl") 登入專區
      section(class="max-w-[800px] mx-auto mt-[44px] xl:mt-[52px] lg:mt-[72px] mb-14 xl:mb-[116px] px-5 xl:px-0")
        ul(class="flex lg:gap-x-6 gap-x-4")
          li
            a(class="inline-block text-gray-600 text-sm bg-gray-100 px-3 py-2 border border-gray-200 lg:rounded-lg rounded-md break-words duration-200 hover:bg-primary hover:border-primary-dark hover:text-white !bg-primary !border-primary-dark !text-white" href="./login.html") 帳號登入
          li
            a(class="inline-block px-3 py-2 text-sm text-gray-600 break-words duration-200 bg-gray-100 border border-gray-200 rounded-md lg:rounded-lg hover:bg-primary hover:border-primary-dark hover:text-white" href="./signup.html") 帳號註冊
          li
            a(class="inline-block px-3 py-2 text-sm text-gray-600 break-words duration-200 bg-gray-100 border border-gray-200 rounded-md lg:rounded-lg hover:bg-primary hover:border-primary-dark hover:text-white" href="#") 下載操作手冊
        div(class="px-5 py-10 mt-8 bg-gray-100 rounded-lg lg:mt-9 lg:py-14")
          div(class="max-w-[450px] mx-auto")
            h2(class="text-2xl font-bold text-center text-black lg:text-3xl") 帳號登入
            div(class="flex flex-col mt-8 gap-y-6")
              label(class="flex flex-col" for="account")
                p(class="text-base text-black") 登入帳號 
                // error 狀態 !border-error-dark !bg-error-light" 
                input(id="account" class="bg-white mt-2 px-4 border border-gray-200 rounded-lg h-12 !border-error-dark !bg-error-light  focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent placeholder-gray-500" type="text")
                // error 訊息，用 !hidden 做隱藏
                div(class="flex items-center mt-2 gap-x-1")
                  img(src="./images/icons/Danger.svg", alt="")
                  span(class="text-sm text-error-dark") 必填欄位
              label(class="flex flex-col" for="password")
                p(class="text-base text-black") 登入密碼 
                // error 狀態 !border-error-dark !bg-error-light"
                input(id="password" class="h-12 px-4 mt-2 placeholder-gray-500 bg-white border border-gray-200 rounded-lg focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent" type="password")
                // error 訊息，用 !hidden 做隱藏
                div(class="flex items-center gap-x-1 mt-2 !hidden")
                  img(src="./images/icons/Danger.svg", alt="")
                  span(class="text-sm text-error-dark") 必填欄位
            div(class="mt-8 text-center")
              button(class="text-white text-15 text-center lg:py-3 py-[6px] lg:w-[225px] w-full bg-primary border border-primary-dark lg:rounded-lg rounded-md duration-200 hover:bg-primary-dark" type="button") 登入
            div(class="mt-8 text-center")
              a(class="inline-block text-gray-500 underline text-15 hover:text-primary-dark" href="./password.html") 忘記密碼

    include ./components/common/footer.pug
    include ./components/common/gotop.pug
