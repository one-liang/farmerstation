include ./components/common/head.pug
include ./components/common/breadcrumbs.pug
include ./components/common/title.pug
include ./components/common/cardH.pug

doctype html
html(lang="zh-Hant-TW")
  +head("forgetpassword")
  body
    include ./components/common/header.pug
    main(class="mt-[60px]")
      // 主圖 
      section(class="bg-white relative")
        div(class="max-w-screen-xl mx-auto relative overflow-hidden xl:rounded-lg before:absolute before:inset-0 before:w-full before:h-full before:bg-gradient-to-r before:from-black/50 before:via-black/0 before:to-black/50")
          img(class="w-full h-[150px] xl:h-[250px] object-cover" src="./images/tag/tag-bg.png", alt="")
          h1(class="absolute top-14 xl:top-16 left-5 xl:left-8 text-2xl xl:text-4xl font-bold text-white") 登入專區
      section(class="max-w-[800px] mx-auto mt-[44px] xl:mt-[52px] mb-14 xl:mb-[116px] px-5 xl:px-0")
        div(class="bg-gray-100 mt-8 px-5 lg:mt-9 py-10 lg:py-14 rounded-lg")
          div(class="max-w-[450px] mx-auto")
            h2(class="text-black text-2xl lg:text-3xl font-bold text-center") 忘記密碼
            div(class="mt-4")
              p(class="text-gray-500 text-[15px]") 請輸入您註冊時填寫的電子信箱，我們將會寄送重設密碼的指引到您的電子信箱。
            div(class="mt-8 flex flex-col gap-y-6")
              label(class="flex flex-col" for="email")
                p(class="text-black text-base") 電子信箱 
                // error 狀態 !border-error-dark !bg-error-light"
                input(id="email" class="bg-white mt-2 px-4 border border-gray-200 rounded-lg h-12" type="email")
                // error 訊息，用 !hidden 做隱藏
                div(class="flex items-center gap-x-1 mt-2 !hidden")
                  img(src="./images/icons/Danger.svg", alt="")
                  span(class="text-error-dark") 必填欄位
            div(class="mt-8 text-center")
              button(class="text-white text-[15px] text-center py-3 w-[225px] bg-primary border border-primary-dark rounded-lg duration-200 hover:bg-primary-dark" type="button") 發送重設密碼
            div(class="mt-8 text-center")
              a(class="flex items-center justify-center text-gray-500 text-[15px] underline hover:no-underline" href="./login.html")
                span 已有帳號/密碼？
                span(class="text-primary-dark") 登入

    include ./components/common/footer.pug
    include ./components/common/gotop.pug
