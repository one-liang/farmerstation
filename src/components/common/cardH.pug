
mixin cardH(data1, data2, data3)
  a(class="flex gap-x-6 group lg:pt-8 first:!pt-0" href="#")
    picture(class="block flex-shrink-0 w-[150px] lg:w-[235px] h-[112px] lg:h-[176px] rounded-lg overflow-hidden")
      img(class="w-full h-auto object-cover duration-200 group-hover:scale-105" src="./images/tag/tag1.png", alt="")
    div
      p(class="text-black text-base lg:text-lg font-medium line-clamp line-clamp-2 duration-200 group-hover:text-primary-dark")=data1
      p(class="!hidden lg:!display-box text-15 text-gray-800 mt-3 line-clamp line-clamp-2")=data2
      div(class="flex flex-wrap gap-x-4 mt-3")
        span(class="inline-block bg-primary-light border border-primary border-opacity-20 text-primary-dark text-sm px-3 py-[6px] rounded-lg" href="#")=data3
