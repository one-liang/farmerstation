
mixin cardActivity(data1, data2)
  a(class="inline-block group" href="#")
    picture(class="block overflow-hidden rounded-md lg:rounded-lg")
      img(class="w-full h-[123px] lg:h-[277px] object-cover duration-300 group-hover:scale-105" src="../images/recommend/recommend2.jpg" alt="")
    p(class="mt-3 text-base font-medium text-black break-words duration-300 lg:text-lg lg:mt-4 line-clamp line-clamp-2 group-hover:text-primary-dark")=data1
    div(class="flex justify-between mt-2 lg:mt-3")
      p(class="text-sm text-gray-500 break-words lg:text-15 line-clamp line-clamp-1")=data2
      img(class="hidden bg-white lg:block" src="../images/icons/Circle-Right-Full.svg" alt="")
