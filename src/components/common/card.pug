
mixin card(data1, data2)
  a(class="relative inline-block card group" href="#")
    picture(class="block overflow-hidden rounded-md lg:rounded-lg")
      img(class="w-full h-[123px] lg:h-[277px] object-cover duration-300 group-hover:scale-105" src="./images/recommend/recommend1.jpg", alt="")
    p(class="mt-3 text-base font-medium text-black break-words duration-300 lg:text-lg lg:mt-4 line-clamp line-clamp-2 group-hover:text-primary-dark")=data1
    p(class="text-base text-gray-800 !hidden lg:!display-box lg:mt-3 line-clamp line-clamp-2 break-words")=data2
